<% layout('/layout/boilerplate') -%>
  <div class="d-flex flex-wrap gap-3 justify-content-center">

    <% for( let pokemon of pokemonDataImage) { %>

            <div class="card" id="link-1" style="width: 18rem;">
              <img src="<%= pokemon.image %>" class="card-img-top" alt="...">
              <div class="card-body">
                <h5 class="card-title">
                  <%= pokemon.ename %>
                </h5>
                <p class="card-text">
                  <%= pokemon.cname %>
                </p>
                <p class="card-text">
                  <%= pokemon.id %>
                </p>
                <% for( let pokemonType of pokemon.type ) { %>
                  <p class="card-text">
                    <%= pokemonType.ename %>
                  </p>
                  <% } %>
              </div>
            </div>
            <% } %>

  </div>


  <nav aria-label="Page navigation example">
    <ul class="pagination justify-content-center">
      <li class="page-item">
        <a class="page-link" href="#" aria-label="Previous">
          <span aria-hidden="true">&laquo;</span>
          <span class="sr-only">Previous</span>
        </a>
      </li>
      <% for( let page of paginationData ) { %>
        <li class="page-item"><a class="page-link" href="/pokedex/<%= page.pageNo %>"><%= page.pageNo %></a></li>
      <% } %>

      <li class="page-item">
        <a class="page-link" href="#" aria-label="Next">
          <span aria-hidden="true">&raquo;</span>
          <span class="sr-only">Next</span>
        </a>
      </li>
    </ul>
  </nav>